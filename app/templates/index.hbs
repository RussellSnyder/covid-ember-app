<div class="row mb-5">
  <BarChart @data={{model}} @compareBy="deaths" @threshold="300"/>
</div>

<div class="row mb-5">
  <BarChart @data={{model}} @compareBy="confirmed" @threshold="5000"/>
</div>

<div class="row mb-5">
  <BarChart @data={{model}} @compareBy="recovered" @threshold="1000"/>
</div>

<SortableTable @activeSortBy={{activeSortBy}} @sortDirection={{sortDirection}} @data={{model}} as |table|>
  <thead>
    <tr>
      {{#table.th field="name"}}Name{{/table.th}}
      {{#table.th field="confirmed"}}Confirmed{{/table.th}}
      {{#table.th field="deaths"}}Deaths{{/table.th}}
      {{#table.th field="recovered"}}Recovered{{/table.th}}
    </tr>
  </thead>
  <tbody>
    {{#each table.sortedData as |data|}}
      <tr class="pointer" {{on "click" (fn this.goToCountryPage data.name)}}>
        <td>{{data.name}}</td>
        <td>{{data.confirmed}}</td>
        <td>{{data.deaths}}</td>
        <td>{{data.recovered}}</td>
      </tr>
    {{/each}}
  </tbody>
</SortableTable>
